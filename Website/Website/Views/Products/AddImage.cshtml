@model Website.Models.Product

@{
    ViewBag.Title = "AddImage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddImage</h2>

@using (Html.BeginForm("AddImage", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container1">
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <div class="row">
                                <div class="col-xs-12">
                                    <h5 style="color:white"><span class="glyphicon glyphicon-cog"></span> Edit Product Information</h5>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="container">
                        <div class="row">
                            <div class="col-sm-8">
                                <div class="panel-body">
                                    <img src="">
                                </div>
                                <br />

                                <div class="row">
                                    <div class="form-group col-lg-12">
                                        @Html.LabelFor(m => m.ImageUploadBytes, htmlAttributes: new {@class = "control-label col-md-10"})
                                        <div class="col-md-10"><input type="file" id="image" name="image" /></div>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group col-lg-2">
                            <input type="hidden" value="Submit" name="save">
                            <button id="update" class="btn btn-primary" type="submit">Save</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
